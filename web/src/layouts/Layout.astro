---
interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A API que você busca é aquela que responde à pergunta antes de ser feita." />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24'><text x='50%' y='65%' font-size='24' text-anchor='middle' dominant-baseline='middle'>㊙️</text></svg>"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title || "Provérbios Chineses"}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<svg>
	<filter id="wavy2">
		<feTurbulence x="0" y="0" baseFrequency="0.02" numOctaves="4" seed="1"></feTurbulence>
		<feDisplacementMap in="SourceGraphic" scale="20"></feDisplacementMap>
	</filter>
</svg>

<style is:global>
	html {
		font-family: serif;
		overflow: hidden;
		background-color: #000000;
	}

	html::after {
		content: "";
		background-image: url("/background.jpg");
		background-size: 50%;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -10000;
		opacity: 0.6;
	}
</style>
